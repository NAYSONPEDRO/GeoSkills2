        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/bg_coordinates_option"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plumpfull"
                android:text="Latitude : 50°"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plumpfull"
                android:text="Latitude : 20°"
                android:textSize="13sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@drawable/bg_block_for_coordinate_option"
                android:backgroundTint="#FF0000" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/bg_coordinates_option"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plumpfull"
                android:text="Latitude : 10°"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plumpfull"
                android:text="Latitude : 80°"
                android:textSize="13sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@drawable/bg_block_for_coordinate_option"
                android:backgroundTint="#05FF00" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/bg_coordinates_option"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plumpfull"
                android:text="Latitude : 0°"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plumpfull"
                android:text="Latitude : 80°"
                android:textSize="13sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@drawable/bg_block_for_coordinate_option"
                android:backgroundTint="#304FFF" />


        </LinearLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
