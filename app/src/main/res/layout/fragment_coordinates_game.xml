                android:layout_height="wrap_content"
                android:fontFamily="@font/plumpfull"
                android:text="Latitude : 80°"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plumpfull"
                android:text="Latitude : 100°"
                android:textSize="13sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"
